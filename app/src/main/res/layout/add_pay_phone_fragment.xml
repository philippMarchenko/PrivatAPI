<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phone">

    <Button
        android:id="@+id/savePayPhone"
        android:theme="@style/MyButton"
        android:textAllCaps="false"
        android:textColor="@color/md_yellow_300"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Сохранить!"
        android:textSize="18sp"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/setDurationView"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Укажите сумму"
        android:textSize="24sp"
        android:layout_below="@+id/setRouteId"
        android:layout_alignLeft="@+id/setRouteId"
        android:layout_marginTop="55dp" />

    <TextView
        android:id="@+id/setRouteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите контакт"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/setNumber"
        android:hint="Ведите номер телефона"
        android:layout_below="@+id/setRouteId"
        android:layout_alignStart="@+id/setRouteId"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/md_yellow_300"
        android:textColor="@color/md_yellow_300"
        android:layout_marginStart="5dp"
        android:textSize="14sp"
        android:layout_width="225dp" />

    <ListView
        android:layout_width="match_parent"
        android:textColor="@color/md_yellow_300"
        android:id="@+id/contacts_list"
        android:layout_above="@+id/savePayPhone"
        android:layout_alignStart="@+id/setDurationView"
        android:layout_marginBottom="55dp"
        android:layout_height="270dp"
        android:layout_below="@+id/setAmt"/>

    <Button
        android:text="Выбрать"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/savePayPhone"
        android:layout_centerHorizontal="true"
        android:theme="@style/MyButton"
        android:textColor="@color/md_yellow_300"
        android:id="@+id/okContact" />

    <Button
        android:text="Выбрать из списка"
        android:textAllCaps="false"
        android:id="@+id/chooseInCotact"
        android:textColor="@color/md_yellow_300"
        android:theme="@style/MyButton"
        android:layout_below="@+id/setRouteId"
        android:layout_alignParentEnd="true"
        android:layout_width="160dp"
        android:layout_height="40dp" />

    <Button
        android:text="10 грн"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setAmt"
        android:textColor="@color/md_yellow_300"
        android:theme="@style/MyButton"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/setDurationView"
        android:layout_alignStart="@+id/setNumber" />

    <Button
        android:text="Отменить выбор"
        android:textAllCaps="false"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/cancelChoose"
        android:textColor="@color/md_yellow_300"
        android:theme="@style/MyButton"
        android:layout_below="@+id/setRouteId"
        android:layout_alignParentEnd="true" />

</RelativeLayout>